{
  "version": 2,
  "builds": [
    {
      "src": "pilgrimage/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.11",
        "includeFiles": ["requirements.txt", "pilgrimage/**", "staticfiles/**"]
      }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config":{
        "distDir":"staticfiles_builds"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/admin/(.*)",
      "dest": "pilgrimage/wsgi.py"
    },
    {
      "src": "/(.*)",
      "dest": "pilgrimage/wsgi.py"
    }
  ]
}